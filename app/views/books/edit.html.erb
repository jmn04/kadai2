<div id="wrapper">
  <%= form_with model: @book do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
  <% end %>
  <% @books.each do |book| %>
  <div class="link-div">
    <p class="link"><%= link_to "Show", book_path(book.id) %></p>
    <p class="link"><%= link_to "Back", "/books" %></p>
  </div>
  <% end %>
</div>